<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:layout_marginBottom="50dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/home_layout"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:background="#E453AEF6">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toolbar"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    android:background="#E453AEF6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="amazon"
                            android:textColor="@color/black"
                            android:textSize="27dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"/>

                        <ImageView
                            android:layout_width="47dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="215dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/home_cart"
                            android:src="@drawable/cart"/>

                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>

            </LinearLayout>
            <com.smarteist.autoimageslider.SliderView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:id="@+id/image_slider"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="30dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="2"
                app:sliderStartAutoCycle="true">

            </com.smarteist.autoimageslider.SliderView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="17dp"
                    android:text="Deal of the Day"
                    android:textSize="23sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:background="@color/white"
                android:backgroundTint="@color/white">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/white">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shoes1"
                        android:background="@color/white"
                        android:backgroundTint="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/shoes"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:id="@+id/oddshoename"
                                android:text="Nike Revolution 5\nRunning Shoes"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹3000"
                                android:id="@+id/oddshoeprice"
                                android:textColor="@color/black"
                                android:textSize="23dp"/>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shoes2"
                        android:background="@color/white"
                        android:backgroundTint="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/pngwing"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:id="@+id/evenshoename"
                                android:text="Nike Air\nMax Shoes"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹9500"
                                android:id="@+id/evenshoeprice"
                                android:textColor="@color/black"
                                android:textSize="23dp"/>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shoes3"
                        android:background="@color/white"
                        android:backgroundTint="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/shoes"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:text="Nike Revolution 5\nRunning Shoes"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹3000"
                                android:textColor="@color/black"
                                android:textSize="23dp"/>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shoes4"
                        android:background="@color/white"
                        android:backgroundTint="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/pngwing"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:text="Nike Air\nMax Shoes"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹9500"
                                android:textColor="@color/black"
                                android:textSize="23dp"/>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shoes5"
                        android:background="@color/white"
                        android:backgroundTint="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/shoes"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:text="Nike Revolution 5\nRunning Shoes"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹3000"
                                android:textColor="@color/black"
                                android:textSize="23dp"/>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="17dp"
                android:text="Top Products"
                android:textSize="23sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/productslist"
                android:nestedScrollingEnabled="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewAllProducts"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginEnd="20dp"
                android:text="VIEW ALL"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</FrameLayout>